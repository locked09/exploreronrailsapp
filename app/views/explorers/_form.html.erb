<%= form_with(model: explorer) do |form| %>
  <% if explorer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(explorer.errors.count, "error") %> prohibited this explorer from being saved:</h2>

      <ul>
        <% explorer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.text_field :first_name, class:"form-control", placeholder:"First Name" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :last_name, class:"form-control", placeholder:"Last Name"  %>
  </div>

  <div class="field form-group">
    <%= form.text_field :email, class:"form-control", placeholder:"Email"  %>
  </div>

  <div class="field form-group">
    <%= form.text_field :phone, class:"form-control", placeholder:"Phone"  %>
  </div>

  <div class="field form-group">
    <%= form.text_field :twitter, class:"form-control", placeholder:"twitter"  %>
  </div>

  <div class="field form-group">
    <%= form.number_field :user_id, id: :explorer_user_id, class:"form-control", value:current_user.id, type:"hidden"  %>
  </div>
  <br/>

  <div class="actions">
    <%= form.submit class:"btn btn-secondary" %>
  </div>
<% end %>
